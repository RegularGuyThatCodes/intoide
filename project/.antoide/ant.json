  "search_and_discovery": {
    "elasticsearch_configuration": {
      "cluster_name": "antoide-search-production",
      "indices": {
        "apps": {
          "settings": {
            "number_of_shards": 12,
            "number_of_replicas": 2,
            "refresh_interval": "5s",
            "analysis": {
              "analyzer": {
                "app_name_analyzer": {
                  "type": "custom",
                  "tokenizer": "standard",
                  "filter": ["lowercase", "stop", "snowball", "synonym_filter"]
                },
                "description_analyzer": {
                  "type": "custom",
                  "tokenizer": "standard", 
                  "filter": ["lowercase", "stop", "stemmer", "length"]
                }
              },
              "filter": {
                "synonym_filter": {
                  "type": "synonym",
                  "synonyms_path": "analysis/synonyms.txt"
                }
              }
            }
          },
          "mappings": {
            "properties": {
              "app_id": { "type": "keyword" },
              "name": {
                "type": "text",
                "analyzer": "app_name_analyzer",
                "fields": {
                  "exact": { "type": "keyword" },
                  "suggest": {
                    "type": "completion",
                    "max_input_length": 50
                  }
                }
              },
              "description": {
                "type": "text",
                "analyzer": "description_analyzer"
              },
              "category_path": {
                "type": "keyword"
              },
              "rating": {
                "type": "nested",
                "properties": {
                  "average": { "type": "float" },
                  "count": { "type": "long" },
                  "distribution": {
                    "type": "object",
                    "properties": {
                      "5_star": { "type": "integer" },
                      "4_star": { "type": "integer" },
                      "3_star": { "type": "integer" },
                      "2_star": { "type": "integer" },
                      "1_star": { "type": "integer" }
                    }
                  }
                }
              },
              "download_metrics": {
                "type": "object",
                "properties": {
                  "total_downloads": { "type": "long" },
                  "weekly_downloads": { "type": "integer" },
                  "download_velocity": { "type": "float" }
                }
              },
              "geo_vector": {
                "type": "dense_vector",
                "dims": 128
              }
            }
          }
        }
      },
      "search_templates": {
        "multi_match_with_boost": {
          "template": {
            "query": {
              "function_score": {
                "query": {
                  "multi_match": {
                    "query": "{{query_string}}",
                    "fields": [
                      "name^5",
                      "description^2",
                      "developer_name^3",
                      "tags^1.5"
                    ],
                    "type": "cross_fields",
                    "operator": "and"
                  }
                },
                "functions": [
                  {
                    "filter": { "range": { "rating.average": { "gte": 4.0 } } },
                    "weight": 1.5
                  },
                  {
                    "field_value_factor": {
                      "field": "download_metrics.weekly_downloads",
                      "factor": 0.001,
                      "modifier": "log1p",
                      "missing": 0
                    }
                  }
                ],
                "score_mode": "multiply",
                "boost_mode": "multiply"
              }
            },
            "highlight": {
              "fields": {
                "name": {},
                "description": {
                  "fragment_size": 150,
                  "number_of_fragments": 2
                }
              }
            }
          }
        }
      }
    },
    "auto_complete": {
      "suggestion_engines": [
        {
          "type": "prefix_based",
          "min_chars": 2,
          "max_suggestions": 10,
          "boost_popular_apps": true
